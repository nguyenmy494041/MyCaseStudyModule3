@model Category

@{
    ViewBag.Title = "Thay đổi loại sản phẩm";
}

<form asp-controller="Category" asp-action="Edit" method="post" class=" bg-light rounded container">
    <div asp-validation-summary="All"></div>
    <input hidden asp-for="CategoryId" />
    <h3>Thay đổi thương hiệu sản phẩm</h3>
    <div class=" row form-group col">
        <div style="width: 22.5%">
            <label asp-for="CategoryName"></label>
        </div>
        <div class=" col-4">
            <input asp-for=" CategoryName" class=" form-control text-uppercase" />
            <span asp-validation-for=" CategoryName" class=" text-danger"></span>
        </div>
        <em class=" text-danger">@ViewData["Message"]</em>
    </div>

    <div class="d-flex justify-content-center">
        <button class="btn btn-info " type="submit">Lưu thay đổi</button>
        <a class=" btn btn-primary" asp-controller="Category" asp-action="Index">Hủy</a>
    </div>
</form>