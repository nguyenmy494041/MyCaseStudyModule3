@model History
@{ 
    ViewBag.Title = "Lịch sử mua hàng";
}
<div class="row">
    <div class="col-md-8 col-lg-6 mx-auto">
        <div class="card card-signin my-5">
            <div class="card-body rounded bg-light">
                <form asp-controller="Order" asp-action="ToLookUp" method="post" class=" mt-4">
                    <img width="400" src="~/images/anh/i1.png"/>
                    <p class=" text-center" style=" font-size:30px">Tra cứu thông tin đơn hàng</p>
                    <div class=" row form-group col">
                        <div class="col-sm-2">
                            <label asp-for=" SoDienThoai">&nbsp;</label>
                        </div>
                        <div class=" col-sm-10">
                            @*<label class="form-check-label">*@
                                <input asp-for="SoDienThoai" type="number" class=" form-control" placeholder="Nhập số điện thoại">
                            @*</label>*@
                            <span asp-validation-for=" SoDienThoai" class=" text-danger"></span>
                        </div>
                    </div>


                    @*hien thi tat ca cac loi*@
                    <div asp-validation-summary="None"></div>
                    <div class="text-center row form-group">
                        <div class=" col-sm-12">
                            <button style=" margin:0px 50px;" type="submit" class=" btn btn-primary">Tra cứu</button>
                            <a asp-controller="Home" asp-action="Show" class="btn btn-warning">Trở về</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>